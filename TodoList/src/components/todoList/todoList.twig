<ul class="todo todo--show-{{ activeFilterClass }}">
  {% for todo in todos %}
    <li key="{{ todo.id }}" class="todo__item todo__item--{{ todo.done ? 'closed' : 'open' }}">
      {% mount '../todo' with {
        id: todo.id,
        done: todo.done,
        text: todo.text,
        toggleTodoState: toggleTodoState
      } %}
    </li>
  {% endfor %}
</ul>